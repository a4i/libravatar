#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh  $@

override_dh_install:
	dh_install

	# Minify and compress javascript and css files
	find $(CURDIR)/debian/ -type f -name "*.css" -execdir yui-compressor -o {} {} \;
	find $(CURDIR)/debian/ -type f -name "*.js"  -execdir yui-compressor -o {} {} \;
